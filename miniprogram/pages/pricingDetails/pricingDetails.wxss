.topbg{
  background: linear-gradient(#ffa700,rgba(254,172,17,.4));
  width: 100%;
  height: 350rpx;
  box-shadow: 0 0rpx 10rpx 10rpx #f7deb2;
}
page{
  background: #f5f5f5;
}
.infobox{
  margin-top: 35rpx;
  padding: 0 30rpx;
}
.orderinfo{
  font-size: 28rpx;
  display: block;
  padding: 30rpx 0;
  margin:0 30rpx;
  font-weight: bold;
  color:#010000;
  border-bottom: 1px solid #E6E6E6;
}
.toptitle{
  margin:0 0 0 30rpx;
  padding-top: 70rpx;
}
.titlebox{
  font-size: 40rpx;
  font-weight: bold;
  display: block;
}
.footerbtn{
  position: fixed;
  z-index: 2;
  background: #FFB606;
  color:#000000;
