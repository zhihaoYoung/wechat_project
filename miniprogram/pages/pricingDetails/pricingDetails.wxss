  background: #fff;
  position: absolute;
  top:200rpx;
  box-shadow:3rpx 5rpx 16rpx 0rpx rgba(78,78,78,0.04);
  left: 24rpx;
}
.footerbtns .firstbtn .van-button{
  margin-left: 30rpx!important;
  width: 240rpx!important;
  border-radius: 8rpx!important;
  border-color: #FFB606!important;
  color:#FFB606!important
}
.footerbtns .secondbtn .van-button{
  margin-left: 30rpx!important;
  width: 420rpx!important;
  border-radius: 8rpx!important;
