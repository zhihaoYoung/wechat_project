  color:#000!important
}
.firstbtn{
  border-color: #FFB606;  
  color:#FFB606
}
.footerbtns{
  width: 95%;
  position: absolute;
  bottom: 20rpx;
  left: 0;
}
.clockbox{
  font-size: 60rpx;
  margin:10rpx 25rpx 0 0
}