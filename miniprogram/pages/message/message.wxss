/* miniprogram/pages/message/message.wxss */
.van-tabs__line{
  background: #FBAC1E!important;
}
.van-tabs__wrap--scrollable .van-tab{
  flex: 0 0 18%!important;
}

.iconbox{
  width: 65rpx;
  margin:2rpx 30rpx 0;
}
.titlebox{
  font-size: 30rpx;
}
.msg_list{
  padding: 30rpx 0;
  border-bottom: 1rpx solid #cdcdcd;
 
}
.msg_list .time{
  position: absolute;
  right: 0;
  color:#B3B3B3;
  font-size: 24rpx;
  font-weight: normal;
  top: 35rpx;
  right: 30rpx;
}
.details{
  font-size: 24rpx;
  margin-top: 15rpx;
  color:#B3B3B3
}
.tab_title span{
  padding: 25rpx 30rpx;
}
.system_msg{
  background: #fff;
}
.tab_title{
  background: #F7F7F7;
  color:#999999;
  font-size: 32rpx;
  
  
}
.tab_title .active{
  position: relative;
  color:#FFB606;
 
}
.tab_title .active::after{
  content: '';
  width: 100%;
  height: 3rpx;
  background:#FFB606 ;
  position: absolute;
  bottom: 0;
  left: 0;
}